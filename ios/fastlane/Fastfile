default_platform(:ios)

platform :ios do
  desc "Build and upload iOS app for a specific environment"

lane :beta_star do
    flavor = "star"
    bundle_id = "com.gnkbros.app"
  
    # Create CI keychain
    create_keychain(
      name: "ci.keychain",
      password: "ci_password",
      default_keychain: true,
      unlock: true,
      timeout: 3600,
      lock_when_sleeps: false
    )
  
    # Fetch signing assets
    match(
      type: "appstore",
      app_identifier: bundle_id,
      readonly: false
    )
  
    # Build app
    gym(
      workspace: "Runner.xcworkspace",
      scheme: flavor,
      export_method: "app-store",
      configuration: "#{flavor.capitalize}Release"
    )
  
    # Upload to TestFlight
    upload_to_testflight
  end
end